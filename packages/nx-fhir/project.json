{
  "name": "nx-fhir",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/nx-fhir/src",
  "projectType": "library",
  "release": {
    "version": {
      "manifestRootsToUpdate": ["dist/{projectRoot}"],
      "currentVersionResolver": "git-tag",
      "fallbackCurrentVersionResolver": "disk"
    }
  },
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/nx-fhir",
        "main": "packages/nx-fhir/src/index.ts",
        "tsConfig": "packages/nx-fhir/tsconfig.lib.json",
        "assets": [
          "packages/nx-fhir/*.md",
          {
            "input": "./packages/nx-fhir/src",
            "glob": "**/!(*.ts)",
            "ignore": ["**/files/**"],
            "output": "./src"
          },
          {
            "input": "./packages/nx-fhir/src",
            "glob": "**/files/**/*",
            "output": "./src"
          },
          {
            "input": "./packages/nx-fhir/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./packages/nx-fhir",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./packages/nx-fhir",
            "glob": "executors.json",
            "output": "."
          },
          {
            "input": "./packages/nx-fhir",
            "glob": "migrations.json",
            "output": "."
          }
        ]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "unpublish": {
      "command": "npm unpublish nx-fhir@$(node -p \"require('./packages/nx-fhir/package.json').version\") --force"
    },
    "nx-release-publish": {
      "dependsOn": ["build"],
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "options": {
        "include": [
          "src/**/*.spec.ts",
          "!src/**/*.e2e.spec.ts"
        ]
      }
    },
    "build-install": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          "nx build nx-fhir",
          "cd dist/packages/nx-fhir && bun install"
        ]
      }
    }
  }
}
