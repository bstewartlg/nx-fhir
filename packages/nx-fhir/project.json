{
  "name": "nx-fhir",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/nx-fhir/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/nx-fhir",
        "main": "packages/nx-fhir/src/index.ts",
        "tsConfig": "packages/nx-fhir/tsconfig.lib.json",
        "assets": [
          "packages/nx-fhir/*.md",
          {
            "input": "./packages/nx-fhir/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./packages/nx-fhir/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./packages/nx-fhir",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./packages/nx-fhir",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/vite:test",
      "options": {
        "include": [
          "src/**/*.spec.ts",
          "!src/**/*.integration.spec.ts"
        ]
      }
    },
    "test:integration": {
      "executor": "@nx/vite:test",
      "options": {
        "include": [
          "src/**/*.integration.spec.ts"
        ]
      }
    },
    "test:unit": {
      "executor": "@nx/vite:test",
      "options": {
        "include": [
          "src/**/*.spec.ts",
          "!src/**/*.integration.spec.ts"
        ]
      }
    }
  }
}
